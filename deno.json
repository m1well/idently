{
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@/": "./src/",
    "log": "https://deno.land/std@0.224.0/log/mod.ts",
    "oak": "https://deno.land/x/oak@v17.1.4/mod.ts",
    "jwt": "https://deno.land/x/djwt@v2.9/mod.ts",
    "std/assert": "https://deno.land/std@0.218.2/assert/mod.ts"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --env-file src/server.ts",
    "tests": "deno test --allow-env --allow-read --allow-write",
    "format": "deno fmt && deno lint"
  },
  "fmt": {
    "lineWidth": 80,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
